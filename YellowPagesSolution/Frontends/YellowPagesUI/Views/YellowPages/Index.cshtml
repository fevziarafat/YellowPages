@model List<YellowPagesDto>

<div class="row">
    <div class="col-md-12">

        <div class="card">
            <div class="card-body">
                <h5 class="card-title">Contacts</h5>

                @if (Model.Any())
                {
                    <table class="table table-striped table-bordered">
                        <thead>
                            <tr>
                                <th>İsim</th>
                                <th>Soy isim</th>
                                <th>Kurs isim</th>
                                <th>İşlemler</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.name</td>
                                    <td>@item.surName</td>
                                    <td>@item.firm</td>
                                    <td>
                                        <a asp-controller="YellowPages" asp-action="AddEmail" asp-route-id="@item.id" class="btn btn-success btn-sm">EMail Ekle</a>
                                        <a asp-controller="YellowPages" asp-action="EmailDelete" asp-route-id="@item.id" class="btn btn-success btn-sm">EMail Sil</a><br>

                                        <a asp-controller="YellowPages" asp-action="AddPhone" asp-route-id="@item.id" class="btn btn-success btn-sm">Telefon Ekle</a>
                                        <a asp-controller="YellowPages" asp-action="PhoneDelete" asp-route-id="@item.id" class="btn btn-success btn-sm">Telefon Sil</a><br>

                                        <a asp-controller="YellowPages" asp-action="AddLocation" asp-route-id="@item.id" class="btn btn-success btn-sm">Location Ekle</a>
                                        <a asp-controller="YellowPages" asp-action="LocationDelete" asp-route-id="@item.id" class="btn btn-success btn-sm">Location Sil</a><br>

                                        <a asp-controller="YellowPages" asp-action="Delete" asp-route-id="@item.id" class="btn btn-danger btn-sm">Yellow Page Sil</a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                }
                else
                {
                    <div class="alert alert-info">
                        Kayıtlı Contact bulunamadı
                    </div>
                }
            </div>
        </div>
    </div>
</div>
