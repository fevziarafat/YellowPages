@{
    YellowPagesDto contact = ViewBag.contact as YellowPagesDto;
}

<div class="row">
    <div class="col-md-12">

        <div class="card">
            <div class="card-body">
                <h5 class="card-title">Yellow Pages</h5>

                @*     <a asp-controller="Courses" asp-action="Create" class="btn btn-primary mb-3">Kurs oluştur</a>*@
                @if (contact.EMailInformations.Any())
                {
                    <table class="table table-striped table-bordered">
                        <thead>
                            <tr>
                                <th>Name</th>
                                <th>Firm</th>
                                <th>SurName</th>
                                <th>EMailInformations</th>
                                <th>Id</th>
                                <th>Id</th>
                                <th>Id</th>
                                <th>İşlemler</th>
                            </tr>
                        </thead>
                        <tbody>

                            <tr>
                                <td>@contact.Name</td>
                                <td>@contact.Firm</td>
                                <td>@contact.SurName</td>
                                <td>
                            <tr>
                                <th>Location</th>
                                <th>ContactId</th>

                                <th>Id</th>
                            </tr>
                     

                                    @{
                                        @foreach (var item in contact.EMailInformations as List<LocationInformationDto>)
                                        {
                                    <tr>
                                        <td>@item.Location</td>
                                        <td>@item.ContactId</td>

                                        <td>@item.Id</td>
                                    </tr>
                                        }




                                    }

                        <td>@contact.Id</td>
                        </tr>

                        </tbody>
                    </table>
                }
                else
                {
                    <div class="alert alert-info">
                        Kayıtlı Yellow Page bulunamadı
                    </div>
                }
            </div>
        </div>
    </div>
</div>